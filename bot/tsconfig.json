{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
        "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": ".",
  },
  "files": [
    "src/Bot.ts"
  ],
  "include": [
    "./**/*.ts",
    "./src/*",
    "src/typings/kuroshiro.d.ts",
    "src/typings/kuroshiro-analyzer-kuromoji.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
